@model OrientationRetakeExam.ViewModels.ClothesViewModel
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="utf-8" />
    <title>Green Fox Fashion Web Store</title>
</head>
<body>
    <h2>Green Fox Fashion Web Store</h2>
    <form action="/warehouse/summary" method="post">
        <select name="ItemName">
            <option>Select item name</option>
            @foreach (var name in Model.UniqueNames)
            {
                <option name="ItemName" value="@name">@name</option>
            }
        </select>
        <select name="Size">
            <option>Select size</option>
            @foreach (var size in Model.UniqueSizes)
            {
                <option name="Size" value="@size">@size</option>
            }
        </select>
        <input type="text" name="Amount" placeholder="Amount"/>
        <button type="submit">GET TOTAL</button>
    </form>
    <table>
        <tr style="font-weight: bold">
            <td>ITEM NAME</td>
            <td>MANUFACTURER</td>
            <td>CATEGORY</td>
            <td>SIZE</td>
            <td>UNIT PRICE</td>
        </tr>
        @foreach (var clothing in Model.AllClothes)
        {
            <tr>
                <td>@clothing.ItemName</td>
                <td>@clothing.Manufacturer</td>
                <td>@clothing.Category</td>
                <td>@clothing.Size</td>
                <td>@clothing.UnitPrice</td>
            </tr>
        }
    </table>
</body>
</html>